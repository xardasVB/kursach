@model BLL.Models.CategoryViewModel

@{
    ViewBag.Title = "Categories";

    string links = Html.PageLinks(Model.CurrentPage, Model.TotalPages, x => Url.Action("Index", "Category", new
    {
        page = x,
        items = Model.Items,
        searchName = Model.SearchName
    }));
}

<h2>Categories</h2>

@using (Html.BeginForm())
{
    @Html.Partial("_ItemsPerPage", Model)
    @Html.Partial("_Search", Model)
}

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
</p>

@Html.Raw(links)
@Html.Partial("_Categories", Model.Categories)
@Html.Raw(links)