@model IEnumerable<BLL.Models.ProductItemViewModel>

<table class="table table-hover table-striped" style="max-width: none; list-style: none; width: 1000px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subcategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manufacturer)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div style="width: 150px;">
                    @Html.Action("GetProductImage", "Product", new { @id = item.Id })
                </div>
            </td>
            <td style="max-width: 150px;">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Price)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Code)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.StockCount)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Subcategory)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </th>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

